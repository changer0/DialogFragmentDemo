<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Animation.menuAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/options_panel_enter</item>
        <item name="android:windowExitAnimation">@anim/options_panel_exit</item>
    </style>


    <style name="Animation.topbarAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/topbar_enter</item>
        <item name="android:windowExitAnimation">@anim/topbar_out</item>
    </style>
</resources>
