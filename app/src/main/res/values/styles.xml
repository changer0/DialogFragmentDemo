<resources xmlns:ns1="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Animation.menuAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/options_panel_enter</item>
        <item name="android:windowExitAnimation">@anim/options_panel_exit</item>
    </style>


    <style name="Animation.topbarAnim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/topbar_enter</item>
        <item name="android:windowExitAnimation">@anim/topbar_out</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/customBottomSheetStyle</item>
    </style>
    <style name="customBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_top_corner</item>
        <item name="behavior_peekHeight">auto</item>
<!--        <item name="android:elevation" ns1:ignore="NewApi">0dp</item>-->
    </style>
</resources>
